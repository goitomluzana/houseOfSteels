<% if (products.length > 0) {%>
      <% products.forEach((product, index) => { %>
            <product>
                <table>
                    <tr>
                        <td><h3><%= product.prodname %></h3></td>
                    </tr>
                    
                    <tr>
                        <td><%= "ID: " + product.product_id %></td>
                    </tr>
                    
                    <tr>
                        <td><%= product.productimage %></td>
                    </tr>
                    
                    <tr>
                        <td><%= product.status %></td>
                    </tr>
                    
                    <tr>
                        <td><%= "$" + product.prodprice %></td>
                    </tr>
                    
                    <tr>
                        <td><a href='/catalog/<%= product.product_id %>/add'> Add To Cart</a></td>
                    </tr>
                </table>
            </product>
        <% }); %>
        
        <% } else { %>
            <p>No Products</p>
        <% } %>
