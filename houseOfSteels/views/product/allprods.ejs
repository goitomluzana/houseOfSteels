<% if (products.length > 0) {%>
<table border = 1>
   <tr>
       <th>Product Name</th>
       <th>Product Image</th>
       <th>Product Status</th> 
       <th>Product Price</th>
       <th colspan=3>Actions</th>
      
    </tr>
      <% products.forEach((product, index) => { %>
                    <tr>
                        <td><%= product.prodname %></td>
                        <td><%= product.productimage %></td>
                        <td><%= product.status %></td>
                        <td><%= "$" + product.prodprice %></td>
                        <td><a href='/product/<%= product.product_id %>'> See Details</a></td>
                        <td><a href='/product/<%= product.product_id %>/edit'> Edit</a></td>
                        <td><a href='/product/<%= product.product_id %>/delete'onclick="return confirm('Are you sure you want to delete this item?');"> Delete</a></td>
                       

                    </tr>
        <% }); %>
        </table>
        <% } else { %>
            <p>Product Not Available</p>
        <% } %>

<br><br>
<a href = "/product/addprod"> Add New Product </a>
